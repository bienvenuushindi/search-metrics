
  <% if @articles.any? %>
    <% @articles.each do |article| %>
      <div class="p-4 border rounded-lg shadow-sm">
        <h3 class="text-xl font-semibold"><%= article.title %></h3>
        <p class="text-gray-600"><%= article.content %></p>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500">No articles found==============</p>
  <% end %>
